numero=int(input("escriba un numero entre 1 y 7 "))
if numero >7 or numero<1:
    print("numero invalido")
if numero == 1:
    print("lunes")
if numero ==2:
    print("martes")
if numero ==3:
    print("miercoles")
if numero ==4:
    print("jueves")
if numero ==5:
    print("viernes")
if numero ==6:
    print("sabado")
if numero ==7:
    print("domingo")
